@model IEnumerable<VentaZapatillas.Models.Zapatilla>

@{
    ViewData["Title"] = "Lista de Zapatillas";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1 class="mb-4">Lista de Zapatillas</h1>

@if (User.IsInRole("Administrador"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">‚ûï Agregar Nueva Zapatilla</a>
    </p>
}

<table class="table table-hover align-middle text-center">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Talla</th>
            <th>Marca</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>S/ @item.Precio</td>
                <td>@item.Stock</td>
                <td>@item.Talla</td>
                <td>@item.Marca</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagenUrl))
                    {
                        <img src="@item.ImagenUrl" alt="Imagen" width="80" class="rounded shadow-sm" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen</span>
                    }
                </td>
                <td>
                    @{
                        if (User.IsInRole("Administrador"))
                        {
                            <div class="d-flex flex-column gap-1">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">‚úèÔ∏è Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">üóëÔ∏è Eliminar</a>
                            </div>
                        }
                        else
                        {
                            <form asp-controller="Carrito" asp-action="Agregar" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="hidden" name="nombre" value="@item.Nombre" />
                                <input type="hidden" name="precio" value="@item.Precio" />
                                <button type="submit" class="btn btn-success btn-sm">üõí Agregar</button>
                            </form>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<VentaZapatillas.Models.Zapatilla>

@{
    ViewData["Title"] = "Lista de Zapatillas";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}



<h1>Lista de Zapatillas</h1>

@if (User.IsInRole("Administrador"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Agregar Nueva Zapatilla</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Talla</th>
            <th>Marca</th>
            <th>Imagen</th>
            @if (User.IsInRole("Administrador"))
            {
                <th>Acciones</th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>S/ @item.Precio</td>
            <td>@item.Stock</td>
            <td>@item.Talla</td>
            <td>@item.Marca</td>
            <td>
                @if (!string.IsNullOrEmpty(item.ImagenUrl))
                {
                    <img src="@item.ImagenUrl" alt="Imagen" width="80" />
                }
            </td>
            @if (User.IsInRole("Administrador"))
            {
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
            }
        </tr>
}
    </tbody>
</table>

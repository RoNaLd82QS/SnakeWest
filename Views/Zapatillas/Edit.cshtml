@model VentaZapatillas.Models.Zapatilla

@{
    ViewData["Title"] = "Editar Zapatilla";
}

<h1>Editar Zapatilla</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Talla"></label>
        <input asp-for="Talla" class="form-control" />
        <span asp-validation-for="Talla" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Marca"></label>
        <input asp-for="Marca" class="form-control" />
        <span asp-validation-for="Marca" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Imagen Actual:</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagenUrl))
        {
            <img src="@Model.ImagenUrl" alt="Imagen actual" width="120" height="120" style="object-fit: cover;" />
        }
        else
        {
            <p>No hay imagen disponible</p>
        }
    </div>

    <div class="form-group">
        <label>Subir Nueva Imagen</label>
        <input type="file" name="ImagenSubida" class="form-control" />
    </div>

    <br />
    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
